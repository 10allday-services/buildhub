{
  "name": "buildhub-ui",
  "version": "0.0.1",
  "description": "Firefox System Build info manager.",
  "scripts": {
    "build": "npm run copy-assets && elm-make src/Main.elm --output=build/app.js",
    "copy-assets": "rimraf build && mkdir build && cp -r public/* build",
    "debug": "elm-live src/Main.elm --warn --dir=public/ --output=public/app.js --debug",
    "deploy": "npm run build && gh-pages --dist build/",
    "start": "elm-live src/Main.elm --warn --dir=public/ --output=public/app.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla-services/buildhub.git"
  },
  "keywords": [
    "firefox"
  ],
  "author": "\"Storage Team\" <storage-team@mozilla.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mozilla-services/buildhub/issues"
  },
  "homepage": "https://github.com/mozilla-services/buildhub#readme",
  "devDependencies": {
    "copyfiles": "^1.2.0",
    "elm": "^0.18.0",
    "elm-live": "^2.7.4",
    "gh-pages": "^0.12.0",
    "rimraf": "^2.6.1"
  }
}
